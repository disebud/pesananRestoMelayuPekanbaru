<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="20dp"
tools:context=".paket.PaketB">

<TextView
    android:id="@+id/title_paketB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="PAKET B"
    android:textColor="@color/black"
    android:background="#FFC9C9"
    android:textSize="20sp"/>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/mi_lendir"
    android:scaleType="centerInside"/>

<TextView
    android:id="@+id/menuB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textAlignment="center"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:text="MIE LENDIR"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="HARGA"/>

<EditText
    android:id="@+id/et_harga_paketB"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:textStyle="bold"
    android:paddingStart="10dp"
    android:focusable="false"
    android:background="#FFC9C9"
    android:cursorVisible="false"
    android:text="25000"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="JUMLAH"/>

<EditText
    android:id="@+id/et_jumlah_paketB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:hint="0"/>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="DISCOUNT"/>

<EditText
    android:id="@+id/et_disc_paketB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:hint="0"/>

<Button
    android:id="@+id/btn_pesan_paketB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FF8080"
    android:onClick="pesanMenuB"
    android:text="PESAN SEKARANG"/>

<Button
    android:id="@+id/btn_main_paketB"
    android:layout_width="match_parent"
    android:backgroundTint="#FF5555"
    android:layout_height="wrap_content"
    android:onClick="menuUtamaB"
    android:text="MENU UTAMA"/>

</LinearLayout>